{
  "name": "mircle",
  "author": "Jack Tan",
  "license": "ISC",
  "version": "1.0.0",
  "description": "An app that connects people via NFC",
  "main": "index.tsx",
  "scripts": {
    "build": "webpack",
    "precommit": "npm-run-all --parallel test tslint stylelint",
    "start": "webpack-dev-server --content-base=src/ --progress --open",
    "testWatch": "jest --watch",
    "test": "jest",
    "coverage": "jest --coverage",
    "stylelint": "stylelint **/src/**/*.css",
    "tslint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "update": "ncu -a --upgrade --upgradeAll --packageFile package.json && yarn upgrade"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif)$": "<rootDir>/config/fileStub.js",
      "\\.(css|scss)$": "<rootDir>/config/cssStub.js"
    },
    "testPathIgnorePatterns": ["<rootDir>/(build|node_modules)/"]
  },
  "repository": "git@github.com:Lilmortal/mircle.git",
  "devDependencies": {
    "enzyme": "^2.8.2",
    "husky": "^0.13.3",
    "jest": "19.0.2",
    "npm-run-all": "^4.0.2",
    "postcss-bem-linter": "^2.7.0",
    "prettier": "^1.2.2",
    "rimraf": "2.6.1",
    "stylefmt": "^5.3.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-selector-bem-pattern": "^1.0.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "tslint-eslint-rules": "^4.1.1",
    "tslint-react": "^3.0.0"
  },
  "dependencies": {
    "@types/enzyme": "^2.8.1",
    "@types/jest": "^20.0.2",
    "@types/react": "^15.0.34",
    "@types/react-dom": "^15.5.1",
    "@types/react-responsive": "^1.1.7",
    "@types/webpack": "^3.0.1",
    "@types/webpack-env": "^1.13.0",
    "autoprefixer": "^6.7.7",
    "awesome-typescript-loader": "^3.2.1",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-webpack-plugin": "^2.28.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-responsive": "^1.3.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.16.1",
    "typescript": "^2.4.1",
    "url-loader": "^0.5.8",
    "postcss-cssnext": "^2.10.0",
    "postcss-loader": "^1.3.3",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.5"
  }
}
